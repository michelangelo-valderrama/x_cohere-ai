---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <link rel="shortcut icon" href="favicon.svg" type="image/x-icon">
    </head>
    <body class="bg-gray-900 text-white">
        <slot />
    </body>
</html>
